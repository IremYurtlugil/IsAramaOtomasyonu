
@{
    ViewData["Title"] = "AddJob";
}

<div class="container ">
    <div class="row justify-content-center ">
        <div class="col-7 ">
            <div class="card mt-4">
                <div class="card-header fs-4 text-center">İlan Oluştur</div>
                <div class="card-body">

                    <div class="mb-3">
                        <label class="form-label">Pozisyon</label>
                        <select class="form-select mt-2 mb-2" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            <option value="1">Developer</option>
                            <option value="2">Tester</option>
                            <option value="3">Business Analyst</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">İlan Açıklaması</label>
                        <textarea class="form-control" id="description" aria-describedby="emailHelp"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Çalışma Türü</label>
                        <br />
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" value="1" checked>
                            <label class="form-check-label">Tam Zamanlı</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" value="2">
                            <label class="form-check-label">Yarı Zamanlı</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Maas</label>
                        <input type="number" class="form-control" id="salary" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label id="beforeBenefits" class="form-label">Yan Haklar</label><br />
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Yol</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Yemek</label>
                        </div>

                    </div>
                    <div id="info">

                    </div>
                    <button id="btnAddJob" type="submit" class="btn btn-primary">İlan Oluştur</button>

                </div>
            </div>
        </div>
    </div>
</div>

